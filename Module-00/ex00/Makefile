################################################################################
#								EXECUTABLES									   #
################################################################################

NAME	=	megaphone

################################################################################
#							COMMANDS AND FLAGS								   #
################################################################################

RM			=	rm -rf

CXX 		=	c++

IFLAGS		=	-I.

CXXFLAGS	=	-Wall -Wextra -Werror -std=c++98

################################################################################
#									FILES									   #
################################################################################

SRCS	=	megaphone.cpp

OBJS	=	$(SRCS:.cpp=.o)

################################################################################
#									RULES									   #
################################################################################

all:		$(NAME)

%.o:		%.cpp
			$(CXX) -c $< $(CXXFLAGS) -o $@ $(IFLAGS)

$(NAME):	$(OBJS)
			$(CC) $(OBJS) -o $@
# $@ is equivalent to $(NAME)

clean:		
			$(RM) $(OBJS)

fclean:		clean
			$(RM) $(NAME)

re:			fclean all

.PHONY:		all clean fclean re