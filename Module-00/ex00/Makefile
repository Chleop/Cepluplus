################################################################################
#								EXECUTABLES									   #
################################################################################

NAME	=	megaphone

################################################################################
#							COMMANDS AND FLAGS								   #
################################################################################

RM		=	rm -rf

CC 		=	g++

CFLAGS	=	-Wall -Wextra -Werror

################################################################################
#									FILES									   #
################################################################################

SRCS	=	megaphone.cpp

OBJS	=	$(SRCS:.cpp=.o)

################################################################################
#									RULES									   #
################################################################################

all:		$(NAME)

.c.o:
			$(CC) $(CFLAGS) -c $< -o $(<:.cpp.o)

$(NAME):	$(OBJS)
			$(CC) $(OBJS) -o $@
# $@ is equivalent to $(NAME)

clean:		
			$(RM) $(OBJS)

fclean:		clean
			$(RM) $(NAME)

re:			fclean all

.PHONY:		all clean fclean re