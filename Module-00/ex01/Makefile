################################################################################
#								EXECUTABLES									   #
################################################################################

NAME	=	phonebook

################################################################################
#									FILES									   #
################################################################################

SRCS	=	main.cpp Contact.class.cpp Phonebook.class.cpp print_functions.cpp

OBJS	=	$(SRCS:.cpp=.o)

################################################################################
#							COMMANDS AND FLAGS								   #
################################################################################

RM		=	rm -rf

CC 		=	g++

IFLAGS	=	-I.

CFLAGS	=	-Wall -Wextra -Werror

################################################################################
#									RULES									   #
################################################################################

all:		$(NAME)

.c.o:
			$(CC) $(CFLAGS) -c $< -o $(<:.cpp.o) $(IFLAGS)

$(NAME):	$(OBJS)
			$(CC) $(OBJS) -o $(NAME)

clean:		
			$(RM) $(OBJS)

fclean:		clean
			$(RM) $(NAME)

re:			fclean all

.PHONY:		all clean fclean re
