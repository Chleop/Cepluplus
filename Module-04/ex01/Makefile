################################################################################
#								EXECUTABLES									   #
################################################################################

NAME	=	animals

################################################################################
#									FILES									   #
################################################################################

SRCS	:= 	$(shell find . -name '*.cpp')

OBJS	=	$(SRCS:.cpp=.o)

################################################################################
#							COMMANDS AND FLAGS								   #
################################################################################

RM			=	rm -rf

CXX 		=	c++

IFLAGS		=	-I.

CXXFLAGS	=	-Wall -Wextra -Werror -std=c++98 -g

################################################################################
#									RULES									   #
################################################################################

all:		$(NAME)

%.o:		%.cpp
			$(CXX) -c $< $(CXXFLAGS) -o $@ $(IFLAGS)

$(NAME):	$(OBJS)
			$(CXX) $(OBJS) -o $(NAME)

clean:		
			$(RM) $(OBJS)

fclean:		clean
			$(RM) $(NAME)

re:			fclean all

.PHONY:		all clean fclean re
